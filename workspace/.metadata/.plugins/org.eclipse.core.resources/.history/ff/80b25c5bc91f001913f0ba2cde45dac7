package utilities;

import java.util.List;


public class Testing {

	/**
	 * @param args
	 */
	public static void main(String[] args) {

		List<String> cusSpam = new ArrayList<>();
		
		
		final List<String> spam = (List<String>) customisation.getSpamWords();
		String spamCommas = "";


		for (int i = 0; i < customisation.getSpamWords().size(); i++)
			if (i == spam.size() - 1)
				spamCommas += spam.get(i);
			else
				spamCommas += spam.get(i) + ", ";

		final int j = 0;
		while (j <= spam.size())
			spamCommas = spamCommas + spam.get(j) + ", ";
		
	}

}
